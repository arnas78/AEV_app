<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newDark"
    tools:context=".RateFrag"
    android:id="@+id/actionLayout">



    <TextView
        android:id="@+id/rate_title"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Keisti elektros tarifą"
        android:textColor="@color/newWhite"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/rate_field"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/rate_field"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="jelly_bean" />


    <ImageView
        android:id="@+id/rate_field"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/backgroundtiny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_title" />

    <EditText
        android:id="@+id/rate_editRate"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/newTeal"
        android:ems="10"
        android:hint="Elektros tarifas (ct/kWh)"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:textColor="@color/newWhite"
        android:textColorHint="@color/newWhiteDark"
        app:layout_constraintEnd_toEndOf="@+id/rate_textRate"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/rate_textRate"
        app:layout_constraintTop_toBottomOf="@+id/rate_textRate" />

    <TextView
        android:id="@+id/rate_textRate"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="Elektros tarifas (ct/kWh)"
        android:textColor="@color/newWhite"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/rate_field"
        app:layout_constraintStart_toStartOf="@+id/rate_field"
        app:layout_constraintTop_toTopOf="@+id/rate_field" />

    <Button
        android:id="@+id/rate_btnSave"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/newTeal"
        android:fontFamily="@font/poppinsbold"
        android:text="Išsaugoti"
        android:textAllCaps="false"
        android:textColor="@color/newWhite"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rate_field"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/rate_field"
        app:layout_constraintTop_toBottomOf="@+id/rate_field" />


</androidx.constraintlayout.widget.ConstraintLayout>